<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".Startingup">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center"


        >


        <pl.droidsonroids.gif.GifImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/gifhandshake"
            android:layout_gravity="center"
            android:src="@drawable/handshake" />

        <TextView
            android:id="@+id/t1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_below="@+id/gifhandshake"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="1dp"

            android:fontFamily="@font/abril_fatface"


            android:includeFontPadding="true"
            android:maxLines="1"

            android:text="Ready to find your match?"
            android:textAlignment="center"
            android:textColor="@color/purple"
            android:textSize="20sp" />

        <ImageView
    android:layout_width="match_parent"
    android:layout_height="2dp"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="60dp"
    android:layout_marginRight="60dp"

    android:background="@android:color/darker_gray"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"

            android:layout_margin="25dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/logininstart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:background="@drawable/border"
                android:fontFamily="@font/artifika"
                android:paddingLeft="20dp"

                android:paddingRight="20dp"
                android:text="login"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                android:fontFamily="monospace"
                android:padding="15dp"
                android:text="or"
                android:textColor="@color/purple"
                android:textSize="15sp" />

            <Button
                android:id="@+id/signupinstart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:background="@drawable/border"
                android:fontFamily="@font/artifika"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="Signup"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="30dp"
    android:layout_gravity="center"
    android:layout_marginBottom="30dp">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:text="@string/hyperlink"
                android:fontFamily="monospace"
                 android:padding="3dp"
                   android:textColor="@color/purple"
                android:textSize="14sp" />


            <Button
                android:id="@+id/help"
                android:layout_width="50dp"
                android:layout_height="30dp"

                android:fontFamily="@font/amaranth"
android:background="@color/colorPrimary"
                android:linksClickable="true"
                android:text="Click "
                android:textColor="#F7F3F3"
                android:textSize="14sp" />
        </LinearLayout>


        <ImageView
            android:id="@+id/profileImage"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:src="@drawable/p"
            android:layout_marginBottom="1dp"/>

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_gravity="center"

            android:fontFamily="monospace"

            android:text="@string/PerfectO"
            android:layout_marginBottom="35dp"

            android:textColor="@color/purple"
            android:textSize="14sp" />


    </LinearLayout>
</ScrollView>